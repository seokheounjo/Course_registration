<!-- 시간표 폼 -->
<form method="post" action="/admin/schedule/create">
    <label>과목:</label>
    <select name="subject.id">
        {{#subjects}}
            <option value="{{id}}">{{name}}</option>
        {{/subjects}}
    </select>

    <label>요일:</label>
    <input type="text" name="dayOfWeek" value="{{schedule.dayOfWeek}}" />

    <label>시작 시간:</label>
    <input type="time" name="startTime" value="{{schedule.startTime}}" />

    <label>종료 시간:</label>
    <input type="time" name="endTime" value="{{schedule.endTime}}" />

    <label>강의실:</label>
    <select name="room.id">
        {{#rooms}}
            <option value="{{id}}">{{name}}</option>
        {{/rooms}}
    </select>

    <button type="submit">시간표 저장</button>
</form>

{{#message}}
    <div style="color:red">{{message}}</div>
{{/message}}