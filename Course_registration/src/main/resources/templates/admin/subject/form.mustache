<h2>
    {{#form.id}}과목 수정{{/form.id}}{{^form.id}}과목 등록{{/form.id}}
</h2>

{{#message}}<p style="color:red;">{{.}}</p>{{/message}}

<form action="/admin/subjects{{#form.id}}/{{form.id}}/edit{{/form.id}}" method="post">
    {{#form.id}}<input type="hidden" name="id" value="{{form.id}}">{{/form.id}}

    과목명 : <input type="text"   name="name"        value="{{form.name}}"     required><br>
    학점   : <input type="number" name="credits"     value="{{form.credits}}"  required><br>
    정원   : <input type="number" name="capacity"    value="{{form.capacity}}" required><br>
    학기   : <input type="text"   name="semester"    value="{{form.semester}}" required><br>

    담당 교수 :
    <select name="professorId">
        <option value="">-- 선택 --</option>
        {{#professors}}
            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
        {{/professors}}
    </select><br>

    학과 :
    <select name="departmentId" required>
        <option value="">-- 선택 --</option>
        {{#departments}}
            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
        {{/departments}}
    </select><br>

    <button type="submit">저장</button>
    <a href="/admin/subjects">목록</a>
</form>

{{#form}}  <!-- ★ form을 섹션으로 열기 -->

{{#id}}<input type="hidden" name="id" value="{{id}}">{{/id}}

