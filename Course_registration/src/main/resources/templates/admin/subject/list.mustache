<form method="get" action="/admin/subjects/search">
    <select name="professorId">
        <option value="">교수 선택</option>
        {{#professors}}
            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
        {{/professors}}
    </select>

    <select name="departmentId">
        <option value="">학과 선택</option>
        {{#departments}}
            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
        {{/departments}}
    </select>

    <input type="text" name="grade" placeholder="학년 (예: 1학년)" value="{{grade}}" />

    <button type="submit">검색</button>
</form>

<h2>과목 목록</h2>
<a href="/admin/subjects/new">새 과목 등록</a>
<table>
    <tr><th>과목명</th><th>학점</th><th>정원</th><th>교수</th><th>학과</th><th>관리</th></tr>
    {{#subjects}}
        <tr>
            <td>{{name}}</td>
            <td>{{credits}}</td>
            <td>{{capacity}}</td>
            <td>
                {{#professor}}{{name}}{{/professor}}
                {{^professor}}<span style="color:red;">등록 필요</span>{{/professor}}
            </td>
            <td>
                {{#department}}{{name}}{{/department}}
                {{^department}}<span style="color:red;">학과 없음</span>{{/department}}
            </td>
            <td>
                <a href="/admin/subjects/{{id}}/edit">수정</a>
                <form action="/admin/subjects/{{id}}/delete" method="post" style="display:inline;">
                    <button type="submit">삭제</button>
                </form>
            </td>
        </tr>
    {{/subjects}}
    {{^subjects}}
        <tr><td colspan="6">등록된 과목이 없습니다.</td></tr>
    {{/subjects}}

</table>
