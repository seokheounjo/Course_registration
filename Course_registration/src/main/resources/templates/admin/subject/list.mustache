<h2>과목 목록</h2>
<a href="/admin/subjects/new">새 과목 등록</a>

<table border="1">
    <thead>
    <tr><th>과목명</th><th>학점</th><th>정원</th><th>교수</th><th>학과</th><th>관리</th></tr>
    </thead>
    <tbody>
    {{#subjects}}
        <tr>
            <td>{{name}}</td>
            <td>{{credits}}</td>
            <td>{{capacity}}</td>
            <td>{{#professor}}{{name}}{{/professor}}{{^professor}}<span style="color:red;">미배정</span>{{/professor}}</td>
            <td>{{department.name}}</td>
            <td>
                <a href="/admin/subjects/{{id}}/edit">수정</a>
                <form action="/admin/subjects/{{id}}/delete" method="post" style="display:inline;">
                    <button type="submit">삭제</button>
                </form>
            </td>
        </tr>
    {{/subjects}}
    </tbody>
</table>
